<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".stokberjalan">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Tersedia"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/green"
        android:textSize="13sp"
        android:fontFamily="@font/ptsheriff"
        android:id="@+id/btn_tersedia3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Berjalan"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/red"
        android:textSize="13sp"
        android:fontFamily="@font/ptsheriff"
        android:id="@+id/btn_berjalan3"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        android:src="@drawable/kuningtengah"
        android:id="@+id/kuningtengah"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_tersedia3"
        android:src="@drawable/coklatmenuhome"
        android:id="@+id/coklatmenuhome"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/caterpillar"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="150dp"
        android:id="@+id/caterpillar"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="CATERPILLAR 323 GC"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="110dp"
        android:layout_below="@id/btn_tersedia3"
        android:textSize="15sp"
        android:fontFamily="@font/ptsheriff"
        android:textColor="@color/white"
        android:id="@+id/textcaterpillar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status : berjalan"
        android:layout_marginLeft="65dp"
        android:layout_below="@+id/textcaterpillar"
        android:layout_marginTop="-12dp"
        android:textColor="@color/red"
        android:textStyle="italic"
        android:id="@+id/text_berjalan"/>

</RelativeLayout>