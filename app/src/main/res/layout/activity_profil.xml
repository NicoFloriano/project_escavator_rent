<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".profil">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bulatkuningbesar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/bulatkuningbesar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/akunbesar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/akunbesar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/kuningbaru"
        android:layout_marginTop="55dp"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:paddingLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_below="@id/bulatkuningbesar"
        android:hint="Nama"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/postnobills"
        android:background="@drawable/untukshape"
        android:id="@+id/kol_nama"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:paddingLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/kol_nama"
        android:hint="Email"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/postnobills"
        android:background="@drawable/untukshape"
        android:id="@+id/kol_email"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:paddingLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/kol_email"
        android:hint="No Telepon"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/postnobills"
        android:background="@drawable/untukshape"
        android:id="@+id/kol_notel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kol_notel"
        android:text="LOG OUT"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:width="150dp"
        android:layout_marginTop="65dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ptsheriff"
        android:textSize="20dp"
        android:id="@+id/btn_logout"/>



</RelativeLayout>